<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="ana.database.dao.BuildingDAO" table="`building`" dynamic-insert="true" dynamic-update="true">
        <id name="building_id" type="java.lang.Long">
            <generator class="identity"/>
        </id>
        <property name="building_name" type="java.lang.String" length="45" not-null="true"/>
        <property name="building_campus" type="java.lang.String" length="45" />
        <property name="building_loc" type="java.lang.String" length="45" />
    </class>
</hibernate-mapping>